<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <groupId>com.pymmasoftware.jbpm</groupId>
    <artifactId>pymma-jbpm-platform-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <!--module>kie-wb-webapp</module-->
        <module>drools-framework-runtime-entity</module>
        <module>drools-framework-common</module>
        <module>drools-framework-runtime-base</module>
        <module>drools-framework-kie-server-parent</module>
        <module>kie-server</module>
        <module>drools-framework-examples</module>
        <module>drools-framework-kie-wb-parent</module>
        <module>drools-framework-thorntail-kie-server-parent</module>
        <module>drools-framework-admin-console-parent</module>
    </modules>
    <packaging>pom</packaging>

    <properties>
        <jbpm.version>7.13.0.Final</jbpm.version>
        <spring.boot.version>1.5.9.RELEASE</spring.boot.version>
        <spring.version>4.3.1.RELEASE</spring.version>
        <version.thorntail>2.2.1.Final</version.thorntail>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.10.4</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <additionalparam>-Xdoclint:none</additionalparam>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <!--plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.3</version>
            </plugin-->
        </plugins>
    </build>

